{% extends "site/layout.njk" %}

{% block content %}

    <main>
        <section class="recipes">
            <div class="header">
                <h2>Buscando por "{{search}}"</h2>
            </div>
            <div class="container">
                <div class="cards">
                    {% for item in items %}
                        <div id="{{item.id}}" class="recipe-card">
                            <img src="{{item.image}}" alt="Imagem de {{item.title}}" class="image">
                            <div class="info">
                                <h3 class="title">{{item.title}}</h3>
                                <p class="subtitle">{{item.chef_name}}</p>                      
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </main>

    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-search={{search}}
    ></div>

    <script src="/site/scripts.js"></script>
    <script src="/site/pagination.js"></script>
{% endblock %}