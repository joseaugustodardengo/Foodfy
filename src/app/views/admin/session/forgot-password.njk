<head>
    {% include "admin/parts/styles.njk"%}
</head>

<body>
    {% include "admin/parts/messages.njk"%}

    <header class="login-header">        
        <div class="header-logo">
            <a href="/home"><img src="/site/logo.png" alt="Foodfy logo"></a>
            <h2>Esqueceu a senha?</h2>     
        </div>   
    </header>
    
    <main>
        <section class="password">        

            <form action="/admin/users/forgot-password" method="POST" id="create">                
                <div class="item">
                    <p>Email</p>
                    <input type="text" name="email" placeholder="Digite seu email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
                </div>
            </form>

            <div class="footer">            
                <button type="submit" form="create">Recuperar</button>
            </div> 
        </section>
    </main>

<script src="/admin/scripts-user.js"></script>

</body>