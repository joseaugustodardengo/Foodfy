{% macro recipes(title, search, class, items) %}

    <section class="{{class}}">
        <div class="container">
            {% if title and search %}
                <h2>{{title}} "{{search}}"</h2>
            {% else %}            
                <h2>{{title}} </h2>
            {% endif %}
            <div class="cards">
                {% for item in items %}
                    <div id="{{item.id}}" class="recipe-card">
                        <img src="{{item.file.path}}" alt="Imagem de {{item.title}}" class="image">
                        <h3 class="title">{{item.title}}</h3>
                        <p class="subtitle">{{item.chef_name}}</p>

                    </div>
                {% endfor %}
            </div>
        </div>
    </section>


{% endmacro %}

