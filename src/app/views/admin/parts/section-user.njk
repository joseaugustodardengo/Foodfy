{% macro user(optionUser, class, classes, nameButton, methodPut, methodDelete, item) %}

<section class="user">
    <div class="header">
        <h2>{{optionUser}} usu√°rio</h2>
        <div class="buttons">
            <button form="{{classes}}" type="submit" class="{{classes}}">{{nameButton}}</button>
            <button form="{{class}}" type="submit">Salvar</button>
        </div>
    </div>

    <form action='/admin/users{{methodPut}}' method="POST" id="{{class}}">
        <input type="hidden" name="id" value="{{item.id}}">
        {%include 'admin/users/fields.njk'%}      

        <div class="radio-user">
            <div class="item">        
                <input type="radio" id="admin" name="admin" value="false">Administrador        
            </div>
        </div>          
    </form>

    <form action="/admin/users{{methodDelete}}" method="POST" id="{{classes}}">
        <input type="hidden" name="id" value="{{item.id}}">
    </form>

</section>


{% endmacro %}

